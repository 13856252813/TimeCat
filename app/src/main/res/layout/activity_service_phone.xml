<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".fragment.person.servicephone.ServicePhoneActivity">

    <include layout="@layout/title_layout" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="71dp"
        android:src="@mipmap/telephoneservice" />
    <!--业务咨询-->
    <LinearLayout
        android:id="@+id/ll_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/ten"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="业务咨询："
            android:textColor="@color/color_six"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="400 800 2421"
            android:textColor="#263A7A"
            android:textSize="16dp" />
    </LinearLayout>
    <!--合作咨询-->
    <LinearLayout
        android:id="@+id/ll_consociation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/ten"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="合作咨询："
            android:textColor="@color/color_six"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_consociation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="400 800 2422"
            android:textColor="#263A7A"
            android:textSize="16dp" />
    </LinearLayout>
    <!--大客户部-->
    <LinearLayout
        android:id="@+id/ll_bigcustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/ten"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="大客户部："
            android:textColor="@color/color_six"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_bigcustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="400 800 2423"
            android:textColor="#263A7A"
            android:textSize="16dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="91dp"
        android:layout_height="91dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@mipmap/wechatservice" />

    <!--微信客服-->
    <LinearLayout
        android:id="@+id/ll_wechatservice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/ten"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="微信客服："
            android:textColor="@color/color_six"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_wechatservice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="132 1421 4123"
            android:textColor="@color/color_six"
            android:textSize="16dp" />
    </LinearLayout>
</LinearLayout>