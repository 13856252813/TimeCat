<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp">

        <com.cary.activity.timecat.util.view.CircleImageView
            android:id="@+id/webUser_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/avatarw" />

        <TextView
            android:id="@+id/webUser_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/webUser_icon"
            android:text="sdsdsd" />


        <TextView
            android:id="@+id/note_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/webUser_name"
            android:layout_marginLeft="@dimen/ten"
            android:layout_toRightOf="@+id/webUser_icon"
            android:text="sdsdsd" />

        <RatingBar
            android:id="@+id/ratingbar_set_meal"
            style="@style/yogaCourseRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_alignBottom="@+id/note_time"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/note_time"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="2"
            android:stepSize="0.5" />
    </RelativeLayout>


    <TextView
        android:id="@+id/note_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_webView_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />



</LinearLayout>