<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/ten">

    <ImageView
        android:id="@+id/iv_attention_meal_item_image"
        android:layout_width="110dp"
        android:layout_height="68dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_attention_meal_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_attention_meal_item_image"
        android:layout_marginLeft="@dimen/ten"
        android:layout_toRightOf="@id/iv_attention_meal_item_image"
        android:text="@string/app_name"
        android:textColor="@color/color_three"
        android:textSize="@dimen/fifteen" />

    <TextView
        android:id="@+id/tv_attention_meal_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_attention_meal_item_image"
        android:layout_marginLeft="@dimen/ten"
        android:layout_toRightOf="@id/iv_attention_meal_item_image"
        android:text="¥1000-¥4000"
        android:textColor="@color/login_color_btn"
        android:textSize="@dimen/fifteen" />

    <TextView
        android:id="@+id/tv_attention_meal_item_sellnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_attention_meal_item_image"
        android:layout_alignParentRight="true"
        android:text="已售1324次"
        android:textColor="#8C8C8C"
        android:textSize="@dimen/ten" />
</RelativeLayout>