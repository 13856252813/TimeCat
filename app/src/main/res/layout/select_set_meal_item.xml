<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_select_set_meal_img"
            android:layout_width="110dp"
            android:layout_height="68dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/tv_select_set_meal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_select_set_meal_img"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_select_set_meal_img"
            android:text="标题"
            android:textColor="#333333"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_select_set_meal_img"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_select_set_meal_img">

            <TextView
                android:id="@+id/select_set_meal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥100"
                android:textColor="#F83244"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/select_set_meal_price_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_toRightOf="@id/select_set_meal_price"
                android:text="¥100"
                android:textColor="#8c8c8c"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/select_set_meal_sell_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="已售123次"
                android:textColor="#8C8C8C"
                android:textSize="11dp" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
