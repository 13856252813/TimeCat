<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/ten"
    tools:context=".fragment.person.integral.IntegralActivity">

    <TextView
        android:id="@+id/tv_integral_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/color_six"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_integral_list_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_integral_list_item_name"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/ten"
        android:text="2018年05月29日11:55:40"
        android:textColor="#C2C2C2"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/tv_integral_list_item_integral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="-100"
        android:textColor="#379AFF"
        android:textSize="16dp" />
</RelativeLayout>