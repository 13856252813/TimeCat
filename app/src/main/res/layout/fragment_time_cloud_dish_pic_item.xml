<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <CheckBox
            android:id="@+id/check_cloud_dish_isshow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/register_checkbox_style"
            android:button="@null"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_time_cloud_dish_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ten"
            android:layout_toRightOf="@id/check_cloud_dish_isshow"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/tv_time_cloud_dish_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_time_cloud_dish_img"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_time_cloud_dish_img"
            android:text="标题"
            android:textColor="#333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_time_cloud_dish_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_time_cloud_dish_title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_time_cloud_dish_img"
            android:text="备注"
            android:textColor="@color/login_color_btn"
            android:textSize="11sp"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/iv_time_cloud_dish_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/clouddiskmenu2" />

    </RelativeLayout>

</LinearLayout>
