<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".fragment.index.fulldress.FullDressTabActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/five"
        android:paddingTop="@dimen/five">

        <ImageView
            android:id="@+id/iv_fulldess_list_back"
            android:layout_width="40dp"
            android:layout_height="@dimen/thirty_six"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:src="@mipmap/leftarrow" />

        <TextView
            android:id="@+id/cloth_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择服装"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:textColor="@color/color_333333"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/layout_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_fulldess_gril"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/switch_button_left_checked"
                android:gravity="center"
                android:text="女装"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btn_fulldess_boy"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/switch_button_right"
                android:gravity="center"
                android:text="男装"
                android:textColor="@color/login_color_btn"
                android:textSize="16dp" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineddd" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_fulldress_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/lineddd" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_fulldress"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>