<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".fragment.person.systemmessage.SysMsgDetialActivity">

    <include layout="@layout/title_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ten"
        android:background="@color/color_f5f5f5" />

    <TextView
        android:id="@+id/tv_sysmsg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/ten"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/color_three"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_sysmsg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/ten"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/color_six"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/tv_sysmsg_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten"
        android:gravity="center"
        android:padding="@dimen/ten"
        android:text="@string/app_name"
        android:textColor="@color/color_six"
        android:textSize="14dp" />
</LinearLayout>