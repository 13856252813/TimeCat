<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".fragment.person.receiveadd.AddReceiveAddressActivity">

    <include layout="@layout/title_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="@dimen/ten">
        <!--请输入收件人姓名-->
        <LinearLayout
            android:id="@+id/ll_received_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_received_person_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收件人"
                android:textColor="@color/color_three"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_received_person"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_weight="4"
                android:background="@null"
                android:hint="请输入收件人姓名"
                android:maxLength="8"
                android:textColorHint="@color/color_nine"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ten"
                android:src="@mipmap/rightarrow" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dfdfdf" />
        <!--请输入收件人的电话-->
        <LinearLayout
            android:id="@+id/ll_received_person_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_received_person_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="收件电话"
                android:textColor="@color/color_three"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_received_person_mobile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_weight="4"
                android:background="@null"
                android:hint="请输入收件人电话"
                android:inputType="phone"
                android:maxLength="11"
                android:textColorHint="@color/color_nine"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ten"
                android:src="@mipmap/rightarrow" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dfdfdf" />
        <!--收件地址-->
        <LinearLayout
            android:id="@+id/ll_received_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_received_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收件地址"
                android:textColor="@color/color_three"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/et_received_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_weight="4"
                android:background="@null"
                android:hint="请选择收件地址"
                android:textColorHint="@color/color_nine"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ten"
                android:src="@mipmap/rightarrow" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dfdfdf" />

        <!--详细地址-->
        <LinearLayout
            android:id="@+id/ll_received_detial_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/five"
            android:layout_marginTop="@dimen/ten"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_received_detial_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="详细地址"
                android:textColor="@color/color_three"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_received_detial_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_weight="4"
                android:background="@null"
                android:hint="请输入详细街道、门牌地址"
                android:textColorHint="@color/color_nine"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ten"
                android:src="@mipmap/rightarrow" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_received_address_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginRight="@dimen/ten"
        android:layout_marginTop="@dimen/twenty"
        android:background="@drawable/login_lgbtn_shape"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="16dp" />
</LinearLayout>