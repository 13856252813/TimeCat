<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.cary.activity.timecat.fragment.index.photography.PayPhotoGraphyOrderActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/title_layout" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one"
                android:background="#dfdfdf"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/ten">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="预定金"
                    android:textColor="#858585"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/pay_photo_graphy_order_beforehand_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="¥0.00"
                    android:textColor="#F83244"
                    android:textSize="13dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:background="#dedede" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/ten">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/tirps" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="该费用为预定金，服务完成后支付尾款"
                    android:textColor="#858585"
                    android:textSize="13dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ten"
                android:background="@color/color_f5f5f5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/ten">

                <TextView
                    android:id="@+id/payorderphotography_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="折扣"
                    android:textColor="#858585"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_toRightOf="@id/payorderphotography_discount"
                    android:text="老用户邀请注册享受折扣"
                    android:textColor="#858585"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/pay_photo_graphy_order_discount_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="-¥0.00"
                    android:textColor="#F83244"
                    android:textSize="13dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ten"
                android:background="@color/color_f5f5f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/ten">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="支付方式"
                    android:textColor="#858585"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/ten"
                    android:background="#dedede" />

                <RelativeLayout
                    android:id="@+id/pay_photo_graphy_order_paymethod_alipay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/payorderphotography_check_logo"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/alipay" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/ten"
                        android:layout_toRightOf="@id/payorderphotography_check_logo"
                        android:text="支付宝快捷方式"
                        android:textColor="#858585"
                        android:textSize="13dp" />

                    <ImageView
                        android:id="@+id/payorderphotography_check_img_alipay"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/checked" />

                    <TextView
                        android:id="@+id/pay_photo_graphy_order_paymethod_alipay_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/five"
                        android:layout_toLeftOf="@id/payorderphotography_check_img_alipay"
                        android:text="已选择"
                        android:textColor="#F83244"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/payorderphotography_check_img_alipay"
                        android:layout_marginLeft="@dimen/ten"
                        android:layout_marginTop="@dimen/twenty"
                        android:layout_toRightOf="@id/payorderphotography_check_logo"
                        android:background="#dedede" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/pay_photo_graphy_order_paymethod_wechat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/payorderphotography_check_logo_wechat"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/wechatpay" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/ten"
                        android:layout_toRightOf="@id/payorderphotography_check_logo_wechat"
                        android:text="微信支付"
                        android:textColor="#858585"
                        android:textSize="13dp" />

                    <ImageView
                        android:id="@+id/payorderphotography_check_img_wechat"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/checked2" />

                    <TextView
                        android:id="@+id/pay_photo_graphy_order_paymethod_wechat_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/five"
                        android:layout_toLeftOf="@id/payorderphotography_check_img_wechat"
                        android:text="已选择"
                        android:textColor="#F83244"
                        android:textSize="13dp"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/payorderphotography_check_img_wechat"
                        android:layout_marginLeft="@dimen/ten"
                        android:layout_marginTop="@dimen/twenty"
                        android:layout_toRightOf="@id/payorderphotography_check_logo_wechat"
                        android:background="#dedede" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/pay_photo_graphy_order_paymethod_friend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/payorderphotography_check_logo_friend"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/friendpay" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/ten"
                        android:layout_toRightOf="@id/payorderphotography_check_logo_friend"
                        android:text="好友代付"
                        android:textColor="#858585"
                        android:textSize="13dp" />

                    <ImageView
                        android:id="@+id/payorderphotography_check_img_friend"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/checked2" />

                    <TextView
                        android:id="@+id/payorderphotography_check_img_friend_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/five"
                        android:layout_toLeftOf="@id/payorderphotography_check_img_friend"
                        android:text="已选择"
                        android:textColor="#F83244"
                        android:textSize="13dp"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/payorderphotography_check_img_friend"
                        android:layout_marginLeft="@dimen/ten"
                        android:layout_marginTop="@dimen/twenty"
                        android:layout_toRightOf="@id/payorderphotography_check_logo_friend"
                        android:background="#dedede" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/ten"
                    android:text="总金额"
                    android:textColor="#858585"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="30dp"
                    android:text="¥"
                    android:textColor="#F83345"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/paygraphy_summoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="0"
                    android:textColor="#F83345"
                    android:textSize="26dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text=".00"
                    android:textColor="#F83345"
                    android:textSize="13dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/five"
                android:background="#dedede" />

            <Button
                android:id="@+id/payorderphotography_okbutton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/ten"
                android:background="@drawable/login_lgbtn_shape"
                android:gravity="center"
                android:padding="@dimen/ten"
                android:text="确认支付"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </LinearLayout>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
