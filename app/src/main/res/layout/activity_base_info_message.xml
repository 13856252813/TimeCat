<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfdfdf"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".fragment.index.fulldress.confirmorder.BaseInfoMessageActivity">

    <include layout="@layout/title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/ten">
        <!--请输入新郎的姓名-->
        <LinearLayout
            android:id="@+id/ll_baseinfomessage_bridegroom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_baseinfomessage_bridegroom_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新郎姓名"
                android:textColor="@color/color_three"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/et_baseinfomessage_bridegroom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_weight="4"
                android:hint="请输入新郎姓名"
                android:maxLength="8"
                android:textColorHint="@color/color_nine"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ten"
                android:src="@mipmap/rightarrow" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dfdfdf" />
        <!--请输入新娘的姓名-->
        <LinearLayout
            android:id="@+id/ll_baseinfomessage_brideg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_baseinfomessage_brideg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="新娘姓名"
                android:textColor="@color/color_three"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/et_baseinfomessage_brideg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_weight="4"
                android:hint="请输入新娘姓名"
                android:maxLength="8"
                android:textColorHint="@color/color_nine"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ten"
                android:src="@mipmap/rightarrow" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dfdfdf" />
        <!--拍摄时间-->
        <LinearLayout
            android:id="@+id/ll_baseinfomessage_shootingtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_baseinfomessage_shootingtime_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍摄时间"
                android:textColor="@color/color_three"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/et_baseinfomessage_shootingtime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_weight="4"
                android:background="@null"
                android:hint="请选择拍摄时间"
                android:textColorHint="@color/color_nine"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ten"
                android:src="@mipmap/rightarrow" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dfdfdf" />

        <!--婚期时间-->
        <LinearLayout
            android:id="@+id/ll_baseinfomessage_wedding_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_baseinfomessage_wedding_day_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="婚期时间"
                android:textColor="@color/color_three"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/et_baseinfomessage_wedding_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_weight="4"
                android:background="@null"
                android:hint="请选择婚期时间"
                android:textColorHint="@color/color_nine"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ten"
                android:src="@mipmap/rightarrow" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dfdfdf" />
        <!--门店接待-->
        <LinearLayout
            android:id="@+id/ll_baseinfomessage_store_reception"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_baseinfomessage_store_reception_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="门店接待"
                android:textColor="@color/color_three"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/et_baseinfomessage_store_reception"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_weight="4"
                android:hint="-------"
                android:inputType="number"
                android:maxLength="15"
                android:textColorHint="@color/color_nine"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ten"
                android:src="@mipmap/rightarrow" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>