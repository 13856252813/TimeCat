<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/ten"
    tools:context=".fragment.index.fulldress.confirmorder.SelectTeacherActivity">

    <LinearLayout
        android:id="@+id/ll_select_teacher_item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_select_teacher_item_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_time_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textColor="@color/color_six"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_time_credit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five"
            android:text="时光信用"
            android:textColor="@color/color_six"
            android:textSize="11dp" />

        <CheckBox
            android:id="@+id/cbProtol"
            android:layout_width="@dimen/thirty"
            android:layout_height="@dimen/thirty"
            android:button="@drawable/register_checkbox_style"
            android:gravity="center" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/ten"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_teacher_name_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cary | 总监"
            android:textColor="@color/color_six"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_teacher_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_teacher_name_nick"
            android:layout_marginTop="@dimen/five"
            android:text="teacher description"
            android:textColor="@color/color_six"
            android:textSize="11dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_teacher_works"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_teacher_description"
            android:layout_marginTop="@dimen/two" />

        <TextView
            android:id="@+id/tv_setmeal_charge_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_setmeal_charge"
            android:layout_marginRight="@dimen/five"
            android:text="收费"
            android:textColor="@color/color_six"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_setmeal_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycler_teacher_works"
            android:layout_toRightOf="@id/tv_setmeal_charge_text"
            android:text="¥10000/"
            android:textColor="@color/login_color_btn"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_setmeal_charge_cloth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_setmeal_charge"
            android:layout_toRightOf="@id/tv_setmeal_charge"
            android:text="套服装"
            android:textColor="@color/login_color_btn"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_seniority_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/recycler_teacher_works"
            android:text="¥"
            android:textColor="@color/login_color_btn"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_seniority_money_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_seniority_money"
            android:layout_marginRight="@dimen/five"
            android:layout_toLeftOf="@id/tv_seniority_money"
            android:text="资历费"
            android:textColor="@color/color_six"
            android:textSize="11dp" />
    </RelativeLayout>


</LinearLayout>