<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".fragment.index.gotogether.GoTogetherPhotoActivity">

    <include layout="@layout/title_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/ten">

        <!--选择服务-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingTop="@dimen/ten">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="选择服务"
                android:textColor="@color/color_three"
                android:textSize="13dp" />

            <!--横向排列 跟拍 摄像 跟妆-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/ten"
                android:paddingRight="@dimen/ten">

                <LinearLayout
                    android:id="@+id/ll_together_photo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/ten"
                    android:paddingRight="@dimen/ten"
                    android:paddingTop="@dimen/ten">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/photographer" />

                    <TextView
                        android:id="@+id/tv_together"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/ten"
                        android:gravity="center"
                        android:text="跟拍"
                        android:textColor="@color/login_color_btn"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/iv_together_line"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="@dimen/ten"
                        android:layout_marginRight="@dimen/ten"
                        android:layout_marginTop="@dimen/ten"
                        android:background="@color/login_color_btn" />
                </LinearLayout>
                <!--摄像-->
                <LinearLayout
                    android:id="@+id/ll_take_photo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/ten"
                    android:paddingRight="@dimen/ten"
                    android:paddingTop="@dimen/ten">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/mainicon7" />

                    <TextView
                        android:id="@+id/tv_take_photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/ten"
                        android:gravity="center"
                        android:text="摄像"
                        android:textColor="@color/color_three"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/iv_take_photo_line"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="@dimen/ten"
                        android:layout_marginRight="@dimen/ten"
                        android:layout_marginTop="@dimen/ten"
                        android:background="@color/login_color_btn"
                        android:visibility="gone" />
                </LinearLayout>
                <!--化妆-->
                <LinearLayout
                    android:id="@+id/ll_make_dress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/ten"
                    android:paddingRight="@dimen/ten"
                    android:paddingTop="@dimen/ten">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/dresser" />

                    <TextView
                        android:id="@+id/tv_make_dress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/ten"
                        android:gravity="center"
                        android:text="跟妆"
                        android:textColor="@color/color_three"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/iv_make_dress_line"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="@dimen/ten"
                        android:layout_marginRight="@dimen/ten"
                        android:layout_marginTop="@dimen/ten"
                        android:background="@color/login_color_btn"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/ten"
                android:background="#dddddd" />
            <!--服务时间-->
            <RelativeLayout
                android:id="@+id/rl_service_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:padding="@dimen/ten">

                <TextView
                    android:id="@+id/tv_service_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="服务时间"
                    android:textColor="@color/color_three"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tv_service_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_toRightOf="@id/tv_service_time_text"
                    android:text=""
                    android:textColor="@color/color_three"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/rightarrow" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/one"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginRight="@dimen/ten"
                android:background="#dfdfdf" />
            <!--服务城市-->
            <RelativeLayout
                android:id="@+id/rl_service_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/ten">

                <TextView
                    android:id="@+id/tv_service_city_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="服务城市"
                    android:textColor="@color/color_three"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tv_service_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_toRightOf="@id/tv_service_city_text"
                    android:text=""
                    android:textColor="@color/color_three"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/rightarrow" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/one"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginRight="@dimen/ten"
                android:background="#dfdfdf" />
            <!--说明备注-->
            <LinearLayout
                android:id="@+id/rl_explain_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ten"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:padding="@dimen/ten">

                <TextView
                    android:id="@+id/tv_explain_remark_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:gravity="top"
                    android:text="说明备注"
                    android:textColor="@color/color_three"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/tv_explain_remark"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_toRightOf="@id/tv_explain_remark_text"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="top"
                    android:hint="请输入备注"
                    android:padding="@dimen/ten"
                    android:textColor="@color/color_three"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:src="@mipmap/rightarrow"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
        <!--bottom-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/ten">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_gotogether_subtraction"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/subadd_bg_circle"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/login_color_btn"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_gotogether_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/login_color_btn"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_gotogether_add"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/subadd_bg_circle"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/login_color_btn"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:gravity="center"
                android:text="您可以自己修改价格，但较高的价格能提高接单率！"
                android:textColor="@color/color_three"
                android:textSize="13dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/one"
                android:layout_marginBottom="@dimen/ten"
                android:layout_marginTop="@dimen/ten"
                android:background="#dfdfdf" />

            <Button
                android:id="@+id/btn_go_together_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/login_color_btn"
                android:gravity="center"
                android:padding="@dimen/ten"
                android:text="发布订单"
                android:textColor="@color/white"
                android:textSize="13dp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>