<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/ten">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_selection_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_selection_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_toRightOf="@id/iv_selection_image"
                android:text="abc"
                android:textColor="@color/color_three"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_selection_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_selection_name"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/iv_selection_image"
                android:text="¥1534"
                android:textColor="@color/login_color_btn"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_selection_specification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_selection_image"
                android:layout_marginLeft="@dimen/ten"
                android:layout_toRightOf="@id/iv_selection_image"
                android:text="请选择规格"
                android:textColor="@color/color_nine"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_selection_repertory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_selection_specification"
                android:layout_marginLeft="@dimen/ten"
                android:layout_toRightOf="@id/iv_selection_image"
                android:text="库存：19件"
                android:textColor="@color/color_nine"
                android:textSize="13sp"
                android:visibility="gone" />
        </RelativeLayout>

        <com.cary.activity.timecat.fragment.index.fulldress.selection.ShoppingSelectView
            android:id="@+id/v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_selection_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten"
            android:background="@color/login_color_btn"
            android:gravity="center"
            android:padding="@dimen/ten"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
