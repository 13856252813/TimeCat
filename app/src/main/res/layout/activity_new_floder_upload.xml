<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cary.activity.timecat.reglogin.PopupUpLoadActivity">


    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:layout_marginBottom="@dimen/fifty"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_new_floder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@drawable/login_whitebtn_shape"
            android:padding="@dimen/ten"
            android:text="新建文件夹"
            android:textColor="@color/login_color_btn"
            android:textSize="@dimen/textsize_content"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_upload_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty"
            android:background="@drawable/login_whitebtn_shape"
            android:padding="@dimen/ten"
            android:text="上传照片"
            android:textColor="@color/login_color_btn"
            android:textSize="@dimen/textsize_content"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:layout_marginTop="15dip"
            android:padding="@dimen/ten"
            android:background="@drawable/login_lgbtn_shape"
            android:text="取消"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
    </LinearLayout>
</RelativeLayout>