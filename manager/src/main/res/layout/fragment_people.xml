<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:background="@mipmap/usergroud_teacher"
        android:orientation="vertical"
        android:padding="@dimen/ten">

        <RelativeLayout
            android:id="@+id/rl_notify_user"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten"
            android:padding="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/bellw" />

            <TextView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/whitecircle_shape" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_notify_user"
            android:padding="10dp">

            <com.cary.activity.timecat.manager.util.view.RoundImageView
                android:id="@+id/riv_user_head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/iv_user_head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/usericon_bg_circle"
                android:scaleType="centerCrop" />


            <TextView
                android:id="@+id/tv_user_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/riv_user_head"
                android:text="时光用户1900"
                android:textColor="@android:color/white"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/tv_user_real_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/iv_user_head"
                android:layout_below="@id/tv_user_nick"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginTop="@dimen/fifteen"
                android:layout_toRightOf="@id/riv_user_head"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="11dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_work_status"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/reload">

            <TextView
                android:id="@+id/tv_start_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14dp" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten"

        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/ten">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/share" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fifteen"
                android:layout_weight="1"
                android:text="我的分享码"
                android:textColor="@color/color_three"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/rightarrow" />
        </LinearLayout>
        <!--工作须知-->
        <LinearLayout
            android:id="@+id/ll_worknotify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/ten">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/question" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fifteen"
                android:layout_weight="1"
                android:text="工作须知"
                android:textColor="@color/color_three"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/rightarrow" />
        </LinearLayout>
        <!--客服电话-->
        <LinearLayout
            android:id="@+id/ll_telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/ten">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/telephone" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fifteen"
                android:layout_weight="1"
                android:text="客服电话"
                android:textColor="@color/color_three"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/rightarrow" />
        </LinearLayout>
        <!--系统设置-->
        <LinearLayout
            android:id="@+id/ll_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/ten">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/settings" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fifteen"
                android:layout_weight="1"
                android:text="系统设置"
                android:textColor="@color/color_three"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/rightarrow" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>