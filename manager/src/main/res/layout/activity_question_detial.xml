<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:fillViewport="true"
    tools:context=".client.question.QuestionDetialActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/five"
            android:orientation="vertical">

            <include layout="@layout/title_layout" />
            <!--内容-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/ten">

                <ImageView
                    android:id="@+id/iv_question_detial_head"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/tv_question_detial_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_toRightOf="@id/iv_question_detial_head"
                    android:text="小号好"
                    android:textColor="#4D4D4D"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_question_detial_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_question_detial_name"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/five"
                    android:layout_toRightOf="@id/iv_question_detial_head"
                    android:text="内容 contxt"
                    android:textColor="#4D4D4D"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:background="@color/white"
                android:padding="@dimen/ten">

                <TextView
                    android:id="@+id/tv_question_detial_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="问题类型"
                    android:textColor="#4D4D4D"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tv_question_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_toRightOf="@id/tv_question_detial_type_text"
                    android:text="常规问题"
                    android:textColor="#4D4D4D"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tv_question_detial_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_question_detial_type_text"
                    android:layout_marginTop="@dimen/ten"
                    android:text="提交时间"
                    android:textColor="#4D4D4D"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tv_question_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_question_detial_type_text"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_toRightOf="@id/tv_question_detial_time_text"
                    android:text="2018年06月23日00:33:16"
                    android:textColor="#4D4D4D"
                    android:textSize="13dp" />
                android:textSize="13dp" />

                <TextView
                    android:id="@+id/tv_question_detial_telephone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_question_detial_time_text"
                    android:layout_marginTop="@dimen/ten"
                    android:text="联系电话"
                    android:textColor="#4D4D4D"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tv_question_telephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_question_detial_time_text"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_toRightOf="@id/tv_question_detial_telephone_text"
                    android:text="123"
                    android:textColor="#4D4D4D"
                    android:textSize="13dp" />
            </RelativeLayout>


        </LinearLayout>


        <!--底部的按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_question_detial_over"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:padding="@dimen/ten"
                android:text="标记完成"
                android:textColor="@color/login_color_btn"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_question_detial_sendmsg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/login_color_btn"
                android:gravity="center"
                android:padding="@dimen/ten"
                android:text="发消息"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </LinearLayout>
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>