<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/ten">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_schedule_typeimg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_schedule_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten"
            android:layout_toRightOf="@id/iv_schedule_typeimg"
            android:text="@string/app_name"
            android:textColor="@color/login_color_btn"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_schedule_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/ten"
            android:text="¥2999"
            android:textColor="@color/login_color_btn"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_schedule_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_schedule_title"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/iv_schedule_typeimg"
            android:text="@string/app_name"
            android:textColor="@color/color_three"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_schedule_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_schedule_typeimg"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/iv_schedule_typeimg"
            android:text="准备阶段"
            android:textColor="@color/color_six"
            android:textSize="@dimen/thirteen" />

        <TextView
            android:id="@+id/tv_schedule_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_schedule_state"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/tv_schedule_state"
            android:text="2018年06月03日19:11:38"
            android:textColor="@color/color_six"
            android:textSize="@dimen/twelve" />

    </RelativeLayout>

    <View
        android:layout_width="@dimen/one"
        android:layout_height="match_parent"
        android:background="#dfdfdf" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_schedule_headimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_schedule_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/ten"
            android:text="@string/app_name"
            android:textColor="@color/color_three"
            android:textSize="15dp" />

    </LinearLayout>
</LinearLayout>
