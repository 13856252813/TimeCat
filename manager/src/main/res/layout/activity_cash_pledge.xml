<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one"
        android:background="#dfdfdf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/ten"
        android:paddingRight="@dimen/ten"
        android:paddingTop="@dimen/twenty">

        <TextView
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_circle_red"
            android:gravity="center"
            android:text="押金"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/fifteen">

            <TextView
                android:id="@+id/tv_cashpledge_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥1000.00"
                android:textColor="@color/login_color_btn"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_cashpledge_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_cashpledge_number"
                android:layout_toRightOf="@id/tv_cashpledge_number"
                android:text="(¥1000.00可退款)"
                android:textColor="#868686"
                android:textSize="13dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one"
            android:layout_marginTop="@dimen/fifteen"
            android:background="#dfdfdf" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/twenty"
            android:text="您退还租借的服装后，可申请退还押金"
            android:textColor="#868686"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/five"
            android:text="租借服装时，押金不足需充值押金"
            android:textColor="#868686"
            android:textSize="14dp" />

        <Button
            android:id="@+id/btn_cash_pledge_charge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:layout_marginTop="@dimen/twenty"
            android:background="@drawable/login_lgbtn_shape"
            android:text="充值押金"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn_cash_pledge_outcharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:layout_marginTop="@dimen/twenty"
            android:background="@drawable/login_whitebtn_shape"
            android:text="退押金"
            android:textColor="@color/login_color_btn"
            android:textSize="16dp" />
    </LinearLayout>
</LinearLayout>