<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/ten">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_grab_typeimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_grab_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten"
            android:layout_toRightOf="@id/iv_grab_typeimg"
            android:text="@string/app_name"
            android:textColor="@color/color_three"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_grab_createtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/ten"
            android:text="@string/app_name"
            android:textColor="@color/color_six"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_grab_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_grab_username"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/iv_grab_typeimg"
            android:text="@string/app_name"
            android:textColor="@color/color_six"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_grab_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_grab_content"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/iv_grab_typeimg"
            android:drawableLeft="@mipmap/route"
            android:text="上海店"
            android:textColor="@color/color_six"
            android:textSize="@dimen/thirteen" />

        <TextView
            android:id="@+id/tv_grab_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_grab_address"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/ten"
            android:layout_marginTop="2dp"
            android:drawableLeft="@mipmap/mooney"
            android:text="上海店"
            android:textColor="@color/color_six"
            android:textSize="@dimen/thirteen" />

    </RelativeLayout>

    <View
        android:layout_width="@dimen/one"
        android:layout_height="match_parent"
        android:background="#dfdfdf" />

    <TextView
        android:id="@+id/tv_grab_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/ten"
        android:text="抢单"
        android:textColor="@color/login_color_btn"
        android:textSize="15dp" />


</LinearLayout>
