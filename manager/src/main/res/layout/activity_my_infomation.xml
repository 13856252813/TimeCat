<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".teacher.fragment.self.MyInfomationActivity">

    <include layout="@layout/title_layout" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--选择门店-->
            <LinearLayout
                android:id="@+id/ll_select_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/ten">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="选择门店"
                    android:textColor="@color/color_three"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tv_select_store"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_weight="1"
                    android:textColor="@color/color_nine"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/rightarrow" />

            </LinearLayout>
            <!--老师类型-->
            <LinearLayout
                android:id="@+id/ll_select_teacher_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/one"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/ten">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="老师类型"
                    android:textColor="@color/color_three"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tv_select_teacher_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_weight="1"
                    android:textColor="@color/color_nine"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/rightarrow" />

            </LinearLayout>
            <!--应聘类型-->
            <LinearLayout
                android:id="@+id/ll_select_acceptance_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/one"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/ten">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="应聘类型"
                    android:textColor="@color/color_three"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tv_select_acceptance_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_weight="1"
                    android:textColor="@color/color_nine"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/rightarrow" />

            </LinearLayout>
            <!--所在城市-->
            <LinearLayout
                android:id="@+id/ll_select_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/one"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/ten">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="所在城市"
                    android:textColor="@color/color_three"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tv_select_city_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_weight="1"
                    android:textColor="@color/color_nine"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/rightarrow" />

            </LinearLayout>
            <!--详细地址-->
            <LinearLayout
                android:id="@+id/ll_select_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/one"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/ten">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="详细地址"
                    android:textColor="@color/color_three"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/tv_select_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_weight="1"
                    android:background="@null"
                    android:padding="@dimen/five"
                    android:textColor="@color/color_three"
                    android:textColorHint="@color/color_nine"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/rightarrow" />

            </LinearLayout>
            <!--紧急联系人-->
            <LinearLayout
                android:id="@+id/ll_select_sos_people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/one"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/ten">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="紧急联系人"
                    android:textColor="@color/color_three"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/tv_select_sos_people"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_weight="1"
                    android:background="@null"
                    android:padding="@dimen/five"
                    android:textColor="@color/color_three"
                    android:textColorHint="@color/color_nine"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/rightarrow" />

            </LinearLayout>

            <!--紧急电话-->
            <LinearLayout
                android:id="@+id/ll_select_sos_telphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/one"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/ten">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="紧急电话"
                    android:textColor="@color/color_three"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/tv_select_sos_telphone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:padding="@dimen/five"
                    android:textColor="@color/color_three"
                    android:textColorHint="@color/color_nine"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/rightarrow" />
            </LinearLayout>

            <!--自有设备-->
            <LinearLayout
                android:id="@+id/ll_select_myfacility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/one"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/ten">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="自有设备"
                    android:textColor="@color/color_three"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/tv_select_myfacility"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_weight="1"
                    android:background="@null"
                    android:padding="@dimen/five"
                    android:textColor="@color/color_three"
                    android:textColorHint="@color/color_nine"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/rightarrow" />

            </LinearLayout>
            <!--自我简介-->
            <LinearLayout
                android:id="@+id/ll_select_selfintroduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/one"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/ten">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自我简介"
                    android:textColor="@color/color_three"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/tv_select_selfintroduction"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="top"
                    android:padding="@dimen/five"
                    android:textColor="@color/color_three"
                    android:textColorHint="@color/color_nine"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/rightarrow" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>