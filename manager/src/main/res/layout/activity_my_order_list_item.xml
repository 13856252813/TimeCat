<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/ten">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_myorder_iamge"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_myorder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_myorder_iamge"
            android:layout_marginLeft="@dimen/ten"
            android:layout_toRightOf="@id/iv_myorder_iamge"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/login_color_btn"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_myorder_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_myorder_name"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:layout_toRightOf="@id/iv_myorder_iamge"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/color_three"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_myorder_stage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_myorder_iamge"
            android:layout_marginLeft="@dimen/ten"
            android:layout_toRightOf="@id/iv_myorder_iamge"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#A2A1A2"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_myorder_stage_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_myorder_iamge"
            android:layout_marginLeft="@dimen/ten"
            android:layout_toRightOf="@id/tv_myorder_stage"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#A2A1A2"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_myorder_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/ten"
            android:gravity="center"
            android:text="Â¥6000"
            android:textColor="@color/login_color_btn"
            android:textSize="13dp" />

    </RelativeLayout>

</LinearLayout>